<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/third_color"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_register_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginStart="6sp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="-25sp"
                android:text="Result"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_register_activity"
        android:background="@drawable/round_shape_sheet"
        android:elevation="40sp"
        android:orientation="vertical"
        android:paddingTop="30sp"
        android:paddingRight="10sp"
        android:paddingLeft="10sp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            app:cardCornerRadius="20sp"
            app:cardElevation="15sp"
            android:backgroundTint="#FFFFFf"
            android:layout_marginBottom="20sp"
            android:outlineSpotShadowColor="@color/third_color"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:orientation="vertical"
                android:padding="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_result_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Name of field"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textColor="@color/third_color"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Your Intelligence Type:"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textColor="@color/third_color"
                    />

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Name of field"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textColor="@color/third_color"
                    />

                <TextView
                    android:id="@+id/tv_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26sp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_result2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26sp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_result3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26sp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_result4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26sp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_result5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26sp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_result6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26sp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_result7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26sp"
                    android:textSize="16sp"
                    android:layout_marginBottom="20sp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10sp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_go_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/third_color"
                android:text="Go To Home Screen"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:padding="10sp"
                android:textSize="13sp" />

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>